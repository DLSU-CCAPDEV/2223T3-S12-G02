<body class="profile_editor_body">
	{{> navbar}}
	<div class="editor_body">
		<div class="editors">
			<div class="account_editor"> 
				<form action="/edit_profile/{{userName}}" method="post">
					
				<h1> User Info </h1>
				<h2> Username </h2>
				<input type="text" name="userName" id="userName" class="profile_input" value="{{userName}}">
				<h2> Email</h2>
				<input type="text" name="userEmail" id="userEmail" class="profile_input" value="{{userEmail}}">
				<h2> Password </h2> 
				<input type="password" name="pw" id="pw" class="profile_input" placeholder="New Password">
				<h2> Description </h2> 
				<textarea class="description_input" name="userBio" id="userBio" placeholder="Add a description">{{userBio}}</textarea>
				<input type="submit" name="saveChanges" class="save_button" value="Save">

				</form>
			</div>
		</div>
	</div>

